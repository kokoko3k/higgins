Private Sub ShowShortcut()

  Dim s As String[]

  hSettings.button1.text = ("Change")
  Try s = Split(File.Load(FMain.xb_rcpath), "\n", "", True)

  If Error Then Return

  hSettings.button1.text = s[s.max]
 
End

